<div class="container">
  <div class="row ">
    <div class="col-xs-12">
      <h1>Our cocktails</h1>

      <ul class="list-group">
        <% @cocktails.each do |cocktail| %>
          <li class="list-group-item">
            <%= cocktail.name %>
            <%= link_to "Details", cocktail %>
          </li>
        <% end %>
      </ul>

      <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
