<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%=@cocktail.name%></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h2>Doses</h2>
        <%= render 'doses/show', doses: @cocktail.doses %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h2>Add a dose</h2>
      <%= render 'doses/form', dose: @dose %>
      <p><%= link_to "< To Homepage", cocktails_path %></p>
    </div>
  </div>
</div>
